<p style="color: green"><%= notice %></p>

<h1>Patients</h1>


<div id="patients">
<table class="table table table-striped table table-bordered table table-hover">
  <thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Gender</th>
    <th>Actions</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
      <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.age %></td>
        <td><%= patient.gender %></td>
        <td>
          <%= link_to "Edit", edit_patient_path(patient), class:"btn btn-secondary" %>
          <%= link_to "Delete", patient_path(patient), class:"btn btn-secondary", method: :delete, data: { confirm: "Are you sure?" } %>
          <%#= link_to "Show", patient %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>

<%= link_to "Create NewPatient", new_patient_path, class:"btn btn-secondary" %>
