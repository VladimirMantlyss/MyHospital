<p style="color: green"><%= notice %></p>

<h1>Doctors</h1>


<div id="doctors">
  <table class="table table table-striped table table-bordered table table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>DepartID</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.name %></td>
        <td><%= doctor.age %></td>
        <td><%= doctor.gender %></td>
        <td><%= doctor.department_id %></td>
        <td>
          <%= link_to "Edit", edit_doctor_path(doctor), class:"btn btn-secondary" %>
          <%= link_to "Delete", doctor_path(doctor), class:"btn btn-secondary", method: :delete, data: { confirm: "Are you sure?" } %>
          <%#= link_to "Show", doctor %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Create NewDocotor", new_doctor_path, class:"btn btn-secondary" %>
