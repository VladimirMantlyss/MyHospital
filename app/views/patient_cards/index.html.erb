<p style="color: green"><%= notice %></p>

<h1>Patient Cards</h1>


<div id="patient_cards">
  <table class="table table table-striped table table-bordered table table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>ClinicId</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @patient_cards.each do |patient_card| %>
      <tr>
        <td><%= patient_card.number %></td>
        <td><%= patient_card.description %></td>
        <td><%= patient_card.clinic_id %></td>
        <td>
          <%= link_to "Edit", edit_patient_card_path(patient_card), class:"btn btn-secondary" %>
          <%= link_to "Delete", patient_card_path(patient_card), class:"btn btn-secondary", method: :delete, data: { confirm: "Are you sure?" } %>
          <%#= link_to "Show", patient_card %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Create NewPatientCard", new_patient_card_path, class:"btn btn-secondary" %>
