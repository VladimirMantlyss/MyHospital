<p style="color: green"><%= notice %></p>

<h1>Specializations</h1>


<div id="specializations">
  <table class="table table table-striped table table-bordered table table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Action</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @specializations.each do |specialization| %>
      <tr>
        <td><%= specialization.name %></td>
        <td><%= specialization.description %></td>
        <td>
          <%= link_to "Edit", edit_specialization_path(specialization), class:"btn btn-secondary" %>
          <%= link_to "Delete", specialization_path(specialization), class:"btn btn-secondary", method: :delete, data: { confirm: "Are you sure?" } %>
          <%#= link_to "Show", specialization %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Create NewSpecialization", new_specialization_path, class:"btn btn-secondary" %>
