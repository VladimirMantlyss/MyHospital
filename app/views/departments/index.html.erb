<p style="color: green"><%= notice %></p>

<h1>Departments</h1>


<div id="departments">
  <table class="table table table-striped table table-bordered table table-hover">
    <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>ClinicId</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.description %></td>
        <td><%= department.clinic_id %></td>
        <td>
          <%= link_to "Edit", edit_department_path(department), class:"btn btn-secondary" %>
          <%= link_to "Delete", department_path(department), class:"btn btn-secondary", method: :delete, data: { confirm: "Are you sure?" } %>
          <%#= link_to "Show", department %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Create NewDocotor", new_department_path, class:"btn btn-secondary" %>
